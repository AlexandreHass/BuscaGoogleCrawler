@using BuscaGoogle.Helpers
@model IEnumerable<BuscaGoogle.Models.Resultado>

@{
    ViewBag.Title = "Busca Crawler";
}

<div class="x_panel">
    <div class="x_title">
        <h2>Busca por termos na página do Google (TOP 10)</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myForm" }))
        {
            <span>Busca por termos: </span>
            <div class="form-inline">
                <label for="termo">Termos&nbsp;&nbsp;</label>
                <input id="termo" type="text" class="form-control text-xl default-cursor" name="termo" value="@ViewBag.Termo" />
                &nbsp;&nbsp;
                <input style="margin-top: 5px" class="btn btn-default" type="submit" value="Buscar" />
            </div>
            <br />
        }

        <table id="tableData" class="table table-striped table-bordered datatable no-footer">
            <thead>
            <tr>
                <th style="vertical-align: middle">
                    Site
                </th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align: middle">
                        <a style="color: #1A5EC9" href="http://@item.Link" target="_blank">@item.Titulo</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>